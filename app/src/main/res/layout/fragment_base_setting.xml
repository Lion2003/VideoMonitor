<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/mp_10"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生产单信息："/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/producOrderId"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="生产单编号"
                android:textSize="@dimen/f_14"
                android:focusable="true"/>
            <EditText
                android:id="@+id/color"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="颜色"
                android:textSize="@dimen/f_14"
                android:focusable="true"/>
            <Spinner
                android:id="@+id/size"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:entries="@array/size_labels"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缝纫机信息："/>
        <RadioGroup
            android:id="@+id/fbs_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:checkedButton="@+id/fbs_bfj"
            android:gravity="center_vertical">
            <RadioButton
                android:id="@+id/fbs_bfj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="包缝机"/>
            <RadioButton
                android:id="@+id/fbs_pfj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平缝机"/>
        </RadioGroup>
        <EditText
            android:id="@+id/frjId"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/mp_20"
            android:hint="输入缝纫机编号"
            android:textSize="@dimen/f_14"
            android:focusable="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="站点编号："/>
        <EditText
            android:id="@+id/siteId"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="站点编号"
            android:textSize="@dimen/f_14"
            android:focusable="true"/>
    </LinearLayout>
    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"/>
</LinearLayout>