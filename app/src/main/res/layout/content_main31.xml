<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="videomonitor.videomonitor.activity.MainActivity"
    tools:showIn="@layout/activity_main31">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/timepicker_line">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/cm_header"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/icon_timg"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mp_10"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名：刘巧慧"
                        android:textSize="@dimen/normal_text_size"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/icon_female"
                        android:text="姓别：女"
                        android:textSize="@dimen/normal_text_size"/>
                    <TextView
                        android:id="@+id/cm_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="编号：A0001"
                        android:textSize="@dimen/normal_text_size"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工位：C007"
                        android:textSize="@dimen/normal_text_size"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年龄：32"
                        android:textSize="@dimen/normal_text_size"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/widget_width_nor"
                android:layout_height="@dimen/widget_width_nor"
                android:src="@mipmap/icon_sanjiao"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <SurfaceView
                android:id="@+id/surfaceview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <!--
            <View
                android:id="@+id/cm_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/surfaceview"
                android:layout_alignBottom="@+id/surfaceview"
                android:background="@color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/mp_5"
                android:background="#44000000"
                android:text="播放视频"
                android:textSize="@dimen/mp_15"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"/>-->
            <ImageView
                android:src="@drawable/btn_video_play_bg"
                android:id="@+id/recordPlayIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_centerInParent="true"
                android:onClick="playVideo"
                android:visibility="gone" />
            <ImageView
                android:src="@mipmap/video_recorder_start_btn_nor"
                android:id="@+id/recordIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/mp_5"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/cm3_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
